<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" type="text/css" href="../../public/change-artikel.css" />
</head>
<div class="article_table_div">
    <h2>Artikel</h2>
    <ul class="article_table">
        <li class="table-header">
            <div class="col col-1">ID</div>
            <div class="col col-2">Name</div>
            <div class="col col-3">Preis</div>
            <div class="col col-4">Beschreibung</div>
            <div class="col col-5">Bewertung</div>
            <div class="col col-6">Bild_Url</div>
        </li>
        <% articles.forEach((article)=>{ %>
            <form action="/delete-article" method="post">
            
            
        <li class="table-row">
            <div class="col col-1"><%= article.ID %></div>
            <div class="col col-2"><%= article.Name %></div>
            <div class="col col-3"><%= article.Preis %> €</div>
            <div class="col col-4"><%= article.Beschreibung %></div>
            <div class="col col-5"><%= (article.Bewertung/article.Anzahlbewertung).toFixed(1) %>/5</div>
            <div class="col col-6"><%= article.Bild %></div>
            <button class="artikelXbtn" type="submit" name="ArtikelID" value="<%= article.ID %>" >X</button>
        </li>
    </form>
        <% }) %>
        <li class="table-header">
            <div class="col col-1">ID</div>
            <div class="col col-2">Name</div>
            <div class="col col-3">Preis</div>
            <div class="col col-4">Beschreibung</div>
            <div class="col col-5">Bewertung</div>
            <div class="col col-6">Bild_Url</div>
        </li>
        <form action="/change-articles" method="post">

            <li class="table-row">
                <label class="col col-1">Neuer Artikel:</label>
                <input class="col col-2" type="text" name="Artikel_Name" />
                <input class="col col-3" type="text" name="Artikel_Preis" />
                <input class="col col-4 " type="text" name="Artikel_Beschreibung" />
                <label class="col col-5"></label>
                <input class="col col-6 " type="text" name="Artikel_Bild_Url" />
            </li>
            <div>
                <input type="submit" value="Artikel hinzufügen" />
            </div>
        </form>
    </ul>

    <form action="/" method="get">
        <div>
            <input type="submit" value="Back" />
        </div>
    </form>
</div>

</body>

</html>